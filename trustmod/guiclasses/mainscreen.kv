MDNavigationLayout:
    MDScreenManager:
        MDScreen:
            name: "screen1"
            MyBoxLayout:
                orientation: 'vertical'
                MyBar:
                    title: "Navigation Drawer"
                    elevation: 4
                    pos_hint: {"top": 1}
                    md_bg_color: "#e7e4c0"
                    specific_text_color: "#4a4939"
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")] ]
                    right_action_items:
                        [['star-outline', lambda x: app.msl.intial_data()], ['star-outline', lambda x: app.msl.intial_data(min_film_count=5, max_film_count=11)], ['star-outline', lambda x: app.msl.intial_data(min_film_count=3, max_film_count=6)], ['star', lambda x: app.msl.intial_data(min_film_count=2, max_film_count=4)], ['star', lambda x: app.msl.intial_data(min_film_count=1, max_film_count=3)], ['star', lambda x: app.msl.intial_data(min_film_count=0, max_film_count=2)], ['menu', lambda x: app.msl.get_random_films_in_series()]  ]
                MyRec:
                    id: rec
                    viewclass: 'MyTile'
                    MDRecycleGridLayout:
                        id: rgg
                        padding: ('0dp', '10dp', '0dp', '0dp')
                        #510, 344
                        default_size: dp(510), dp(344)
                        default_size_hint: None, None
                        spacing: dp(4)
                        #cols: 5
                        cols: 5
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'lr-tb'
        MDScreen:
            name: "screen2"

    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 16, 16, 0)
        

<myTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_position: 'header'
    box_color: 0, 0, 0, .8
    padding: ('4dp', '20dp', '0dp', '0dp')
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    overlap: False
    size: "320dp", "320dp"
    MDIconButton:
        on_release: app.msl.idols_choice(root)
        icon: "heart-outline"    
    MyLabel:
        text: f"{root.label}"
    MDIconButton:
        icon: "play-outline" 
        on_release: app.msl.playme2(root.film_name)
    MDIconButton:
        icon: "heart-outline"    
        on_release: app.msl.get_random_films_in_series()
    MDIconButton:
        icon: "dots-vertical"
        on_release: root.change_idol()
        




