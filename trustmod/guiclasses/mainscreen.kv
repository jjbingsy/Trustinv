MDScreen:
    MDBoxLayout:
        orientation: 'vertical'
        MyBar:
            title: "Navigation Drawer"
            elevation: 4
            pos_hint: {"top": 1}
            md_bg_color: "#e7e4c0"
            specific_text_color: "#4a4939"
            left_action_items:
                [['menu', lambda x: nav_drawer.set_state("open")], 
                ['menu', lambda x: app.msl.get_random_films_in_series()],
                ['menu', lambda x: app.msl.intial_data2() ] ]
            right_action_items:
                [['star-outline', lambda x: app.msl.intial_data()], 
                ['star-outline', lambda x: app.msl.intial_data(min_film_count=5, max_film_count=11)], 
                ['star-outline', lambda x: app.msl.intial_data(min_film_count=3, max_film_count=6)], 
                ['star', lambda x: app.msl.intial_data(min_film_count=2, max_film_count=4)], 
                ['star', lambda x: app.msl.intial_data(min_film_count=1, max_film_count=3)],
                ['star', lambda x: app.msl.intial_data(min_film_count=0, max_film_count=2)],
                ['menu', lambda x: app.msl.add_new_videos()],   
                ['arrow-left', lambda x: app.msl.load_previous()], ['arrow-right', lambda x: app.msl.load_forward()] ]
            
        MDNavigationLayout:

            MDScreenManager:
                id: screen_manager
                MDScreen:
                    name: "screen1"
                    MyBoxLayout:
                        orientation: 'vertical'
                        MyRec:
                            id: rec
                            viewclass: 'MyTile'
                            MDRecycleGridLayout:
                                id: rgg
                                padding: ('0dp', '0dp', '0dp', '0dp')
                                #510, 344
                                default_size: dp(510), dp(344)
                                default_size_hint: None, None
                                spacing: dp(4)
                                #cols: 5
                                cols: 5
                                size_hint_y: None
                                height: self.minimum_height
                                orientation: 'lr-tb'
                MDScreen:
                    name: "screen2"
                    BoxLayout:
                        orientation: 'vertical'
                        
                        MDTextField:
                            id: my_text_field
                            hint_text: "Enter something"
                            
                        MyButton:
                            label_obj: my_label
                            text_field: my_text_field
                            text: "Display Text"
                            pos_hint: {"center_x": 0.5}

                        MDLabel:
                            id: my_label
                            halign: 'center'
                MDScreen:
                    name: "screen3"
                    BoxLayout:
                        orientation: 'vertical'
                        
                        MDTextField:
                            id: my_text_field2
                            hint_text: "Enter something"
                            
                        MyButton:
                            label_obj: my_label2
                            text_field: my_text_field2
                            text: "Display Text"
                            pos_hint: {"center_x": 0.5}

                        MDLabel:
                            id: my_label2
                            halign: 'center'
                        MDTextField:
                            id: my_text_field3
                            hint_text: "Enter something"
                            
                        MyButton:
                            label_obj: my_label3
                            text_field: my_text_field3
                            text: "Display Text"
                            pos_hint: {"center_x": 0.5}

                        MDLabel:
                            id: my_label3
                            halign: 'center'
                        

            MDNavigationDrawer:
                id: nav_drawer
                radius: (0, 16, 16, 0)

                ContentNavigationDrawer:
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer

        

<myTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_position: 'header'
    box_color: 0, 0, 0, .8
    padding: ('4dp', '20dp', '0dp', '0dp')
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    overlap: False
    size: "320dp", "320dp"
    MDIconButton:
        on_release: app.msl.idols_choice(root.tile_logic)
        icon: "heart-outline"    
    OneLineListItem:
        text: f"{root.film_name} - {root.second_header}"
    MDIconButton:
        icon: "play-outline" 
        on_release: app.msl.playme2(root.film_name)
    MDIconButton:
        icon: "dots-vertical"    
        disabled: root.disabled_multi_idol
        on_release: root.change_idol()
    MDIconButton:
        icon: "menu"
        disabled: root.disabled_series
        on_release: app.msl.load_series(root.tile_logic.series_key  )
    MDIconButton:
        icon: "plus"
        on_release: app.msl.bookmark(root.film_name  )



<ContentNavigationDrawer>
    id: content_drawer1
    MyMDList:
        mydrawer: content_drawer1
        OneLineListItem:
            text: "Screen 1"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "screen1"

        OneLineListItem:
            text: "Screen 2"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "screen2"

        OneLineListItem:
            text: "Screen 3"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "screen3"

        OneLineListItem:
            text: "Top Idols"
            on_press: 
                root.nav_drawer.set_state("close")
                app.msl.intial_data()
        OneLineListItem:
            text: "New Films"
            on_press: 
                root.nav_drawer.set_state("close")
                app.msl.intial_data2(file_path = 'stuff/hh.txt')
        OneLineListItem:
            text: "New Filmsxxcx"
            on_press: 
                root.nav_drawer.set_state("close")
                app.msl.intial_data2(file_path = 'stuff/include1.txt')
