MyScreen:

<MyScreen>:
    orientation: "vertical"
    
    MDTopAppBar:
        id: toolbar
        right_action_items: [["dots-vertical", lambda x: app.callback(x)  ],["dots-vertical", lambda x: app.callbackx(x)  ] ]
        title: "Our Swipper App"
        elevation: 6
        pos_hint: {"top": 1}
    MyRec:
    
<MyRec>:
    viewclass: 'myTile'
    RecycleGridLayout:
        id: rgg
        padding: ('0dp', '10dp', '0dp', '0dp')
        default_size: None, dp(340)
        default_size_hint: 1, None
        spacing: dp(4)
        cols: 9
        size_hint_y: None
        height: self.minimum_height
        orientation: 'lr-tb'


<MenuIconButton>:
    size_hint: None, None
    on_release: app.cell_menu(self)

<myTile>:
    radius: 24
    box_radius: [0, 0, 24, 24]
    box_color: 0, .9, 0, 0
    padding: ('4dp', '20dp', '0dp', '0dp')
    pos_hint: {"center_x": .5, "center_y": .5}
    size_hint: None, None
    size: "320dp", "320dp"
    
    MDLabel:
        box_color: 0,0,0,.5
        text: root.texti
        bold: True
        #color: 1, 1, 1, 1
    

